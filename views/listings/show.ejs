<%layout('layouts/boilerplate') -%>
<div class="row mb-3">
  <div class="col-8 offset-2 ">

  
    <h3>Listing Details :</h3>

    <div class="card">
      <img src="<%= listing.image.url %>" alt="<%=listing.image%>" class="card-img-top show-img" />
      <div class="card-body">
        <p class="card-text">  
          <b><%= listing.title %></b><br>
          <%= listing.description %> <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/night <br>
          <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %>

          
        </p>
      </div>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn edit">Edit </a>
    
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark " >Delete</button>
    </form>
      </div>
    </div>
    

  </div>
</div>
 